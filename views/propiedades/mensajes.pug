extends ../layout/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")= pagina
    a(href="/mis-propiedades" class=" rounded-lg m-10 py-2 px-10 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase inline-block w-full md:w-auto my-10 sm:w-auto") Regresar

    //-pre=JSON.stringify(mensajes, undefined, 2)

    div(class="mx-auto max-w-6xl bg-white shadow")
        if mensajes.length 
            ul 
                each mensaje in mensajes
                    li(class="border-gray-200 border-b p-5")
                        
                        p(class="font-bold text-gray-800") Nombre:                          
                            span(class="font-normal")= mensaje.usuario.nombre

                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal")= mensaje.usuario.email

                        p(class="font-bold text-gray-800") Telefono: 
                            span(class="font-normal")= mensaje.usuario.telefono   

                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal")= mensaje.mensaje

                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-normal")=formatearFecha(mensaje.createdAt) 
                            

                        // Bot√≥n para redirigir a WhatsApp
                        a(href=`https://wa.me/${mensaje.usuario.telefono.replace(/\D/g, '')}?text=Hola%20${mensaje.usuario.nombre}%2C%20solicitaste%20informacion%20de%20la%20propiedad` 
                           target="blank" class="inline-block mt-4 py-2 px-6 bg-green-500 hover:bg-green-600 text-white font-bold rounded-md text-center") Contactar por WhatsApp


        else
            p(class="text-center text-gray-600 p-5") No hay mensajes 